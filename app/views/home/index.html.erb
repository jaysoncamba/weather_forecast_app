<div class="container mt-10" data-controller="search">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div id="selected-tags" class="mb-3"></div>

      <!-- Form group with flexbox layout -->
      <div class="form-group d-flex align-items-center position-relative">
        <input type="text" id="location_search" class="form-control flex-grow-1" data-search-target="input" placeholder="Type a location">
        
        <button class="btn btn-primary ms-2" data-action="click->search#search">Search</button>

        <!-- Spinner for loading state -->
        <div class="position-absolute top-50 end-0 translate-middle-y me-3" data-search-target="spinner" style="display: none;">
          <div class="spinner-border spinner-border-sm text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>

        <!-- Suggestions Box (hidden by default) -->
        <ul class="list-group position-absolute w-100 mt-1" data-search-target="suggestions" style="display: none; max-height: 300px; overflow-y: auto;"></ul>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-md-8">
      <h4 class="text-center">Weather Forecast</h4>
      <table class="table table-striped" data-search-target="forecastTable">
        <thead>
          <tr>
            <th scope="col">Location</th>
            <th scope="col">Temperature (Â°C)</th>
            <th scope="col">Weather</th>
            <th scope="col">Wind Speed (km/h)</th>
            <th scope="col">Remarks</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>

      <div class="alert alert-warning mt-3" data-search-target="forecastMessage" style="display: none;">
        <!-- Error or helpful message will be shown here -->
      </div>
    </div>
  </div>
</div>
